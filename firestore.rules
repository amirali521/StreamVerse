
/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces user ownership for profiles and role-based access for content and settings.
 *
 * Data Structure:
 * - /users/{userId}: User profile info, including admin roles.
 * - /content/{contentId}: Publicly readable content.
 * - /settings/{settingId}: Global settings, manageable by admins.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Helper functions for checking user roles and ownership.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function isSignedIn() {
      return request.auth != null;
    }
    function isUserAdmin(userId) {
      return exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.admin == true;
    }
    function isUserSuperAdmin(userId) {
        return exists(/databases/$(database)/documents/users/$(userId)) &&
               get(/databases/$(database)/documents/users/$(userId)).data.isSuperAdmin == true;
    }
    function isRequestingUserAdmin() {
      return isSignedIn() && isUserAdmin(request.auth.uid);
    }
    function isRequestingUserSuperAdmin() {
      return isSignedIn() && isUserSuperAdmin(request.auth.uid);
    }
    
    /**
     * @description Controls access to user profile documents.
     */
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isOwner(userId);
      
      // Allow user to update their own non-admin, non-critical fields
      allow update: if isOwner(userId) &&
                       !request.resource.data.keys().hasAny(['admin', 'isSuperAdmin', 'blocked']);

      // Allow super admin to update other users' roles and blocked status
      allow update: if isRequestingUserSuperAdmin() &&
                       // Prevent super admin from removing their own super admin status
                       (userId != request.auth.uid || request.resource.data.isSuperAdmin == true) &&
                       // Prevent making another user a super admin
                       (!request.resource.data.keys().has('isSuperAdmin') || request.resource.data.isSuperAdmin == false);
      
      // Allow a super admin to delete any user except themselves
      allow delete: if isRequestingUserSuperAdmin() && userId != request.auth.uid;
    }

    /**
     * @description Controls access to content documents.
     * Publicly readable, but only admins can write.
     */
    match /content/{contentId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isRequestingUserAdmin();
    }
    
    /**
     * @description Controls access to global settings.
     * Publicly readable, but only admins can write.
     */
    match /settings/{settingId} {
        allow get: if true;
        allow list: if true;
        allow create, update: if isRequestingUserAdmin();
        allow delete: if false; // Settings should not be deleted
    }

    /**
     * @description Controls access to community chat messages.
     * Authenticated users can read and write messages.
     * Nobody can update or delete messages.
     */
    match /community-chat/{messageId} {
        allow list, get: if isSignedIn();
        allow create: if isSignedIn() && 
                         request.resource.data.userId == request.auth.uid &&
                         request.resource.data.text.size() > 0 &&
                         request.resource.data.text.size() < 500;
        allow update, delete: if false;
    }

    /**
     * @description Controls access to content requests.
     * Signed-in users can create requests.
     * Admins can read, list, and update the status of requests.
     * Users can only read their own requests.
     */
     match /content-requests/{requestId} {
        allow get: if isSignedIn() && (resource.data.userId == request.auth.uid || isRequestingUserAdmin());
        allow list: if isRequestingUserAdmin();
        allow create: if isSignedIn() &&
                         request.resource.data.userId == request.auth.uid &&
                         request.resource.data.status == 'pending' &&
                         request.resource.data.requestText.size() > 0 &&
                         request.resource.data.requestText.size() < 500;
        allow update: if isRequestingUserAdmin() &&
                         request.resource.data.keys().hasOnly(['status']);
        allow delete: if isRequestingUserAdmin();
     }
  }
}
