
/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces user ownership for profiles and role-based access for content and settings.
 *
 * Data Structure:
 * - /users/{userId}: User profile info, including admin roles.
 * - /content/{contentId}: Publicly readable content.
 * - /settings/{settingId}: Global settings, manageable by admins.
 *
 * Key Security Decisions:
 * - User data is private to the owner, but readable by admins.
 * - Only super admins can grant/revoke admin status.
 * - Content is publicly readable, but writeable only by admins.
 * - Settings are readable by all, but writeable only by admins.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Helper functions for checking user roles and ownership.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function isSignedIn() {
      return request.auth != null;
    }
    function isUserAdmin(userId) {
      return exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.admin == true;
    }
    function isUserSuperAdmin(userId) {
        return exists(/databases/$(database)/documents/users/$(userId)) &&
               get(/databases/$(database)/documents/users/$(userId)).data.isSuperAdmin == true;
    }
    function isRequestingUserAdmin() {
      return isSignedIn() && isUserAdmin(request.auth.uid);
    }
    function isRequestingUserSuperAdmin() {
      return isSignedIn() && isUserSuperAdmin(request.auth.uid);
    }
    
    /**
     * @description Controls access to user profile documents.
     * Users can read/write their own profile. Admins can read any profile.
     * Only a super admin can change another user's admin or superAdmin status.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isRequestingUserAdmin();
      allow list: if isRequestingUserAdmin();
      allow create: if isOwner(userId);
      
      // Allow user to update their own non-admin fields
      allow update: if isOwner(userId) &&
                       request.resource.data.keys().diff(resource.data.keys()).hasOnly(['displayName', 'photoURL']) &&
                       request.resource.data.displayName == request.resource.data.displayName &&
                       request.resource.data.photoURL == request.resource.data.photoURL;

      // Allow super admin to update other users' admin status, but not superAdmin status
      allow update: if isRequestingUserSuperAdmin() &&
                       !request.resource.data.isSuperAdmin &&
                       request.resource.data.keys().hasAny(['admin']);
    }

    /**
     * @description Controls access to content documents.
     * Publicly readable, but only admins can write.
     */
    match /content/{contentId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isRequestingUserAdmin();
    }
    
    /**
     * @description Controls access to global settings.
     * Publicly readable, but only admins can write.
     */
    match /settings/{settingId} {
        allow get: if true;
        allow list: if true;
        allow create, update: if isRequestingUserAdmin();
        allow delete: if false; // Settings should not be deleted
    }
  }
}
