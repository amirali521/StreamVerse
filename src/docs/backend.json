
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the user's profile photo."
        },
        "admin": {
          "type": "boolean",
          "description": "Whether the user has admin privileges."
        }
      },
      "required": ["displayName", "email"]
    },
    "Content": {
      "title": "Content",
      "description": "Represents a movie, web series, or drama.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the content."
        },
        "description": {
          "type": "string",
          "description": "A short description of the content."
        },
        "type": {
          "type": "string",
          "enum": ["movie", "webseries", "drama"],
          "description": "The type of content."
        },
        "bannerImageUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL for the banner image."
        },
        "googleDriveVideoUrl": {
          "type": "string",
          "format": "uri",
          "description": "Google Drive URL for the video."
        },
        "imdbRating": {
          "type": "number",
          "description": "IMDb rating for the content."
        }
      },
      "required": ["title", "description", "type", "bannerImageUrl", "googleDriveVideoUrl", "imdbRating"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public information about a user."
    },
    "/content/{contentId}": {
      "schema": { "$ref": "#/entities/Content" },
      "description": "Stores all content items like movies, web series, and dramas."
    }
  }
}
